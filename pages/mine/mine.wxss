page{
  background-color: #efefef;
}

.order{
  background-color: #ffffff;
  margin: 5%;
  height: 200rpx;
  width: 90%;
  border-radius: 20rpx;
  display: flex;
  flex-direction:column;
  justify-content: left;
}

.order_son{
  display: flex;
  flex-direction:row;
  justify-content: center;
}

.order_tip{
  margin-left: 20rpx;
  margin-top: 5%;
  font-size: 25rpx;
}

.divLine{
  margin-top: 10rpx;
  background: #AAAAAA;
  width: 95%;
  height: 1rpx;
  align-self: center;
 }

 .order_icon_view{
  display: flex;
  width: 120rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  flex-direction:column;
  justify-content: center;

 }

 .order_icon{
    height: 40rpx;
    width: 40rpx;
    align-self: center;
 }

 .order_text{
   margin-top: 10rpx;
   font-size: 25rpx;
   align-self: center;
   color: #333333;
 }

.topview{
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction:row;
  justify-content: left;
  background-color: #87CEEB;
}

.portrait{
  align-self: center;
  margin: 50rpx;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}

.portrait_text{
  margin-top: auto;
  margin-bottom: auto;
  font-size: 30rpx;
  padding: 10rpx;
  border-radius: 50rpx;
  border:1px solid black;
}

.nickname_view{
  margin-top: auto;
  margin-bottom: auto;
}

.name{
  font-size: 40rpx;
  color: #000000;
}

.phone{
  font-size: 30rpx;
  color: #000000;
}

