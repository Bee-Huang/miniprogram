<view class="box0" >
    <view class="box0_1" >
        <view class="{{is_true==true?'box0_1_1_press':'box0_1_1'}}" bindtap='click1' >
            订单
        </view>
    </view>
    <view class="box0_1" >
        <view class="{{is_true==false?'box0_1_1_press':'box0_1_1'}}" bindtap='click2'>
            历史订单
        </view>
    </view>
</view>

<view class="none"></view>

<view class="_box1" wx:if="{{is_true==true}}">
    <block wx:for="{{order}}" >
        <view class="box1" wx:if="{{item.is_submit==false}}">
        <view class="box1_1" >
            <view class="box1_1_1"  >
                <image class="img" src="{{item.src}}" bindtap='cheak_img1' data-src="{{item.src}}" />
            </view>
            <view class="box1_1_2" >
                <view class="box1_1_2_1" >
                    布料：{{item.cloth}}
                </view>
                <view class="box1_1_2_2" >
                    颜色：{{item.color}}
                </view>
            </view>
            <view class="box1_1_3" bindtap='submit_click' data-isSubmit="{{item.is_submit}}" data-submitTime="{{item.submit_time}}" data-id="{{item.id}}" >
                提交
            </view>
        </view>
        <view class="box1_2" >
            客户留言：{{item.words}}
        </view>
        <view class="box1_3" >
            <view class="box1_3_1" wx:for="{{item.img}}" bindtap='cheak_img2' data-src="{{item.src}}">
            <image class="img" src="{{item.src}}" />
            
            </view>
        </view>
        <view class="box1_4" >
            <view class="box1_4_1" wx:for-index="childindex" 
                wx:for-item="items"  
                data-parent='{{index}}' wx:for="{{4}}" wx:if="{{is_add==false}}" bindtap='add_img'  >
                <view class="box1_4_1_1" >
                    +
                </view>
            </view>
            
            <view class="box1_4_1" wx:for="{{item.desiger_img}}" wx:if="{{is_add==false}}">
                <image class="img" src="{{item.src}}" wx:if="{{is_add==true}}" />
            </view>
        </view>
    </view>
    </block>
    
</view>

<view class="_box1" wx:if="{{is_true==false}}">
    <view class="box1" wx:for="{{order}}" wx:if="{{item.is_submit==true}}">
        <view class="box1_1" >
            <view class="box1_1_1" >
                <image class="img" src="{{item.src}}" />
            </view>
            <view class="box1_1_2" >
                <view class="box1_1_2_1" >
                    布料：{{item.cloth}}
                </view>
                <view class="box1_1_2_2" >
                    颜色：{{item.color}}
                </view>
            </view>
            <view class="box1_1_3" >
                完成
            </view>
        </view>
        <view class="box1_2" >
            设计师留言：
        </view>
        <view class="box1_3" >
            <view class="box1_3_1" wx:for="{{item.img}}">
            <image class="img" src="{{item.src}}" />
            
            </view>
        </view>
        <view class="box1_4" >
            <view class="box1_4_1" wx:for="{{4}}">
                <view class="box1_4_1_1" >
                    +
                </view>
            </view>
        </view>
    </view>
</view>

